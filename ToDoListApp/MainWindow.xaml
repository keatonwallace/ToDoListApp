<Window x:Class="ToDoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="TodoListBox" HorizontalAlignment="Left" Height="273" Margin="10,10,0,0" VerticalAlignment="Top" Width="365"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Height="21" Margin="10,288,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="365" Cursor="None"/>
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Left" Margin="387,287,0,0" VerticalAlignment="Top" Width="75" Click="CreateButtonClick"/>
        <Button x:Name="CompleteButton" Content="Complete" HorizontalAlignment="Left" Margin="387,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="EditButton" Content="Edit" HorizontalAlignment="Left" Margin="387,35,0,0" VerticalAlignment="Top" Width="75" Click="EditButtonClick"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="387,60,0,0" VerticalAlignment="Top" Width="75" Click="DeleteButtonClick"/>

    </Grid>
</Window>
